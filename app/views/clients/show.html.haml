.row.mini-margin
  .col-xs-12
    .ibox
      .ibox-title
        %h5= t('.about_client')
      .ibox-content
        .row
          .col-sm-12.col-md-6.first-table
            %table.table.table-bordered
              %tr
                %td.spacing-first-col
                  = t('.age')
                %td
                  %strong
                    = @client.age_as_years
              %tr
                %td.spacing-first-col
                  = t('.gender')
                %td
                  %strong
                    = @client.gender.try(&:titleize)
              %tr
                %td.spacing-first-col
                  = t('.address')
                %td
                  %strong
                    = merged_address(@client)
          .col-sm-12.col-md-6.second-table
            %table.table.table-bordered
              %tr
                %td.spacing-first-col
                  = t('.carer_name')
                %td
                  %strong
                    = @client.gov_carer_name
              %tr
                %td.spacing-first-col
                  = t('.carer_phone')
                %td
                  %strong
                    = @client.gov_carer_phone
              %tr
                %td.spacing-first-col
                  = t('.social_worker')
                %td
                  %strong= @client.gov_caseworker_name

- Organization.switch_to('public')
