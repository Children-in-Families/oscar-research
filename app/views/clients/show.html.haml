.row
  .col-xs-12
    .row
      .col-md-3
        %span.show-name

        .client-info
          = @client.slug
          = @client.gender.titleize
      .col-md-6
        %table.table.small.m-b-xs
          %tbody
            %tr
              %td
                = t('.date_of_birth')
                %strong= @client.date_of_birth_format
              %td
            %tr
              %td
                = "#{t('.age')} : "
                %strong= @client.age
              %td
                = "#{t('.current_province')} : "
                %strong= @client.current_province
      .col-md-2
        .dropdown
          %button.btn.btn-primary.dropdown-toggle{"data-toggle" => "dropdown", :type => "button"}
            = t('.government_forms')
            %span.caret
          %ul.dropdown-menu
            %li
              = link_to client_path(@client, format: 'pdf', form: 'one'), target: :_blank do
                %span.text-success= t('.government_form_one')
